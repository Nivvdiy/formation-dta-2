<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>PizzaServletWebApi</servlet-name>
  	<display-name>PizzaServletWebApi</display-name>
  	<description></description>
  	<servlet-class>fr.pizzeria.admin.web.PizzaServletWebApi</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ListPizzaController</servlet-name>
  	<display-name>ListPizzaController</display-name>
  	<description></description>
  	<servlet-class>fr.pizzeria.admin.web.ListPizzaController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RemovePizzaController</servlet-name>
  	<display-name>RemovePizzaController</display-name>
  	<description></description>
  	<servlet-class>fr.pizzeria.admin.web.RemovePizzaController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UpdatePizzaController</servlet-name>
  	<display-name>UpdatePizzaController</display-name>
  	<description></description>
  	<servlet-class>fr.pizzeria.admin.web.UpdatePizzaController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginSiteController</servlet-name>
  	<display-name>LoginSiteController</display-name>
  	<description></description>
  	<servlet-class>fr.pizzeria.admin.web.LoginSiteController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>PizzaServletWebApi</servlet-name>
  	<url-pattern>/api/servlet/pizzas</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ListPizzaController</servlet-name>
  	<url-pattern>/pizzas/list</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RemovePizzaController</servlet-name>
  	<url-pattern>/pizzas/delete</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UpdatePizzaController</servlet-name>
  	<url-pattern>/pizzas/edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginSiteController</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
</web-app>
